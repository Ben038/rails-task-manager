<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<% if @task.completed == true %>
    <p><input type="checkbox" checked="checked">  This task is completed</p>
    <% else %>
    <p><input type="checkbox">  This is task is not completed yet</p>
  <% end %>


<p><%= link_to "edit the task", edit_path(@task) %></p>

<p><%= link_to "Back to all tasks", tasks_path %></p>
